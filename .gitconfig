[user]
	name = Oscar Tuff
	email = 90379013+oTuff@users.noreply.github.com
[init]
	defaultBranch = main
[core]
	editor = nvim
[diff]
	tool = nvimdiff
[merge]
	tool = nvimdiff
[mergetool]
	keepBackup = false
[pull]
    ff = only
[push]
	autoSetupRemote = true
[fetch]
	prune = true
[credential]
	credentialStore = secretservice
	helper = ~/.nix-profile/bin/git-credential-manager
[credential "https://dev.azure.com"]
	useHttpPath = true
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
